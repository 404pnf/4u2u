skinr[prosper-common-styles][title] = Acquia Prosper - common theme styles
skinr[prosper-common-styles][type] = checkboxes
skinr[prosper-common-styles][description] = Acquia Prosper's styles for blocks, panels, views, and content types
skinr[prosper-common-styles][features][] = block
