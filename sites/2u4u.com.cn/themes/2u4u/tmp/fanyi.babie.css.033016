@charset "utf-8"; /* CSS Document */
/* 翻译node页整体布局 */
/* 外框 */
.node-type-fanyi-chapter #main #main-inner #content{
border:1px solid #D1D1D1;
border-top:0px;
padding:0 10px;
width:653px;
}
/* 标题 加背景、颜色、左侧padding*/
.node-type-fanyi-chapter #page #page-inner #main #main-inner #content #content-inner #content-header h1.title {
background-image:url("images/video_titleall.jpg");
border:medium none;
clear:both;
font-size:14px;
font-weight:700;
height:35px;
line-height:35px;
margin-left:-10px;
width:673px;
text-align:left;
}
.node-type-fanyi-chapter #page #page-inner #main #main-inner #content #content-inner #content-header h1.title span.title-content  {
padding-left:10px;
}

/* 章节与标题在同一行 */
.node-type-fanyi-chapter #content .field-field-fanyi-zhangjie {
float:right;
margin-top:-35px;
font-size:1.1em;
font-weight:bold;
}

/* 翻译人横排 */
 .node-type-fanyi-chapter .field-field-fanyi-translators  {
float:left;
width:500px;
}
.node-type-fanyi-chapter .field-field-fanyi-translators .field-label {
float:left;
} 
.node-type-fanyi-chapter .field-field-fanyi-translators .field-items .field-item {
float:left;
}


/* 上一章、下一章链接右对齐 */
.node-type-fanyi-chapter #prev-next{
float:right;
} 

/* 去掉章节表格的宽度2u4u中 ,并设置章节内容布局 */
.node-type-fanyi-chapter  #page #page-inner #main #main-inner #content #content-inner #content-area .node-inner .content table.sticky-enabled {
background-color:#FFFFFF;
width:290px;
border:medium none;
margin:0 auto;
}
