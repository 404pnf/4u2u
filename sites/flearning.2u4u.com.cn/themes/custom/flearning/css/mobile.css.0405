/*------- 列表页、视频页标题 样式 -------*/
#page_title,
.page-title{
	height: 68px;
	line-height: 50px;
	background: url("images/title_bg.png") repeat-x scroll left center transparent;
	text-align: center;
	font-size: 2em;
	color: #10475F;
	margin-bottom: -19px;
	z-index: 99999;
	position: relative;
	
}
/*--------- end 列表页、视频页标题 样式 --------*/


/*---------- 分类、搜索列表页样式 --------*/
.term-search table {
	width: 728px;
	margin: 20px;
}
.term-search tbody td{
	width:235px;
	height:326px;
	padding:2px 4px;
}
.term-search .termrow{
	 background: url("images/liebiao_bg.png") no-repeat scroll center center transparent;
}
.term-search .termrow .views-field-cover{
	text-align: center;
	margin-bottom: 10px;
}
.term-search .termrow .views-field-cover img{
	box-shadow:2px 2px 8px #000000;
	
}
.term-search .termrow .views-field-field-app-icon-fid img{
	border-radius:1.4em;
}

.term-search .views-field-title{
	font-size: 1.6em;
	font-weight: normal;
	text-shadow:2px 2px 2px #000000;
}
.term-search .views-field-field-ebook-cover-fid-1{
	margin-left:45px;
}
.term-search .views-field-field-shipin-cover-fid-1{
	margin-left:50px;
}
.term-search .views-field-field-app-icon-fid-1{
	margin-left:40px;
}

.term-search .views-field-type .type-icon{
	text-indent: -9999px;
	display: block;
	width: 30px;
	height: 30px;
	float: left;
	padding-left: 22px;
	margin-top: -5px;
}
.term-search .views-field-type .icon-ebook{
	background: url("images/shu.png") no-repeat scroll center center transparent;
	width: 25px;
}
.term-search .views-field-type .icon-shipin{
	background: url("images/shipin.png") no-repeat scroll center center transparent;
	width: 30px;
}
.term-search .views-field-type .icon-app{
	background: url("images/app.png") no-repeat scroll center center transparent;
	width: 20px;
}
.term-search .views-field-tid{
	padding-left: 15px;
	text-shadow:2px 2px 2px #000000;
	margin-top: 4px;
}
.term-search .view-footer{
	font-size:1.5em;
	text-align:center;
	padding: 28px 0;
}
.term-search .view-footer a{
	color:#01f6f9;
	text-decoration:underline;
}	

/*---------- end分类、搜索列表页样式 --------*/

/*--------高级搜索页面------*/
.page-advanced-search #page_content{
	text-align:center;
	
}
#advanced-search-block{
	text-align:left;
	margin: 0 auto; 
	width:650px;
	height:354px;
	background:url("images/advanced_bg.png") repeat-x scroll left center transparent;
	border-radius:0.8em;
	margin-top: 240px;
	border:1px solid #24292d;
}	
#advanced-search-title{
	height: 60px;
	line-height: 70px;
	border-bottom: 1px solid #0F1A23;
	padding-left: 30px;
	font-size: 2em;
	color: #A0A5A9;
	font-weight: normal;
	letter-spacing: 0.3em;
}
#advanced-search-condition{
	border-top: 1px solid #343F47;
	font-size: 1.6em;
	padding: 40px 130px 40px 95px;
}
#advanced-search-condition #views-exposed-form-search-advanced-search .views-exposed-widget{
	clear:both;
	height:55px;
}
#advanced-search-condition #views-exposed-form-search-advanced-search  label{
	float: left;
	display: block;
	width: 90px;
	text-align: right;
	padding: 5px 20px;
	letter-spacing: 0.2em;
}
#advanced-search-condition #views-exposed-form-search-advanced-search  .views-widget{
	float:left;
}
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-type,
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-tid,
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-title{
	font-size: 1.0em;
	color: #516F88;
	width: 275px;
	border-radius: 8px;
	height: 30px;
}
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-type{
	width:155px;
}
#advanced-search-condition #views-exposed-form-search-advanced-search .views-reset-button,#advanced-search-condition #views-exposed-form-search-advanced-search .views-submit-button{
	float:right;
	clear:none;
}
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-submit-search,
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-reset{
	border: none;
	letter-spacing: 0.7em;
	text-shadow: 1px 2px 2px #333;
	width: 105px;
	height: 31px;
	line-height: 31px;
	font-size: 1em;
	color: white;
	text-align: right;
	box-shadow: none;
	padding: 0px 0.7em 4px 1em;
}
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-submit-search{
	background:url("images/search_btn.png") no-repeat scroll center center transparent;
}
#advanced-search-condition #views-exposed-form-search-advanced-search #edit-reset{
	background:url("images/cancel_btn.png") no-repeat scroll center center transparent;
}



/*-------- end 高级搜索页面------*/



