/* whx bxy */
/* 给duhougan confirm等页面加一个最低高度 */
.page-duhougan-confirm #content {
min-height:350px;
}
/* 让confrim links横着排列并增加之间间距 */
.page-duhougan-confirm #confirm_message .confirm-links ul li {
display:block;
float:left;
margin:10px 20px;
}

/* 让h3标题和下面的 confirm message 左对齐 */
.page-duhougan-confirm #confirm_message h3{
margin:30px 0px 20px 56px;
}
/* 让读后感的terms和作者信息左对齐 */
.node-type-readthink .meta {
float:left;
display:block;
clear:both;
}


/* 让读后感的副标题也左对齐，也就是所有duhougan fields左对齐 */
.node-type-readthink #content .field-items .field-item {
clear:both;
display:block;
text-indent:0;
}

/* 单独让读后感正文字段缩进 */
.node-type-readthink #content .field-field-dhg-zhengwen .field-items .field-item {
text-indent:26px;
}
