      $requirements['advagg_javascript_aggregator'] = array(
        'title'       => $t('Adv CSS/JS Agg - Javascript Aggregator'),
        'severity'    => REQUIREMENT_WARNING,
        'value'       => $t('The Javascript Aggregator is enabled'),
