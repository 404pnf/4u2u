/*   翻页样式  */
.item-list .pager li {
    border: 1px solid #CECECE;
    color: #FFFFFF;
    margin: 0;
    padding: 1px 5px;
    font-size: 10px;
}
.pager-current {
    background-color: #CECECE;
}
.item-list ul {
    margin: 15px 0;
    text-align: center;
    padding: 0;
}

/*情景百科 视频列表页*/
ul.quicktabs_tabs{
	list-style:none;
}

ul.quicktabs_tabs li{
	float:left;
	margin-right: 8px;
}

ul.quicktabs_tabs li.active a{
	color:red;
}

.page-mobile .view-mobile-baike .views-row{
	float: left;
    margin-right: 20px;
    position: relative;
    padding-bottom:0px;
}
.page-mobile .view-mobile-baike .views-field-title,.page-mobile .view-mobile-baike .views-field-nothing{
    bottom: 8px;
    font-size: 12pt;
    line-height: 1.5em;
    position: absolute;
    width: 100%;
}
.page-mobile .view-mobile-baike .views-field-nothing{
    background: none repeat scroll 0 0 #000000;
    opacity: 0.5;
}
.page-mobile .view-mobile-baike .views-field-title a,.page-mobile .view-mobile-baike .views-field-nothing a{
	color:white;
}
