@charset "utf-8"; /* CSS Document */
body{
	font-size: 12pt;
    line-height: 1.6em;
}
body.page-mobile {   
	background-color: #DCDBDA;
}
.views-hide,.block-config{
	display:none;
}

a:link {
    color: #272727;
    text-decoration: none;
}
a:visited {
    color: #272727;
    text-decoration: none;
}
a:hover {
    color: #272727;
