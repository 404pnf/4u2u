/* whx bxy */
/* 给duhougan confirm等页面加一个最低高度 */
.page-duhougan-confirm #content {
min-height:350px;
}
/* 让confrim links横着排列并增加之间间距 */
.page-duhougan-confirm #confirm_message .confirm-links ul li {
display:block;
float:left;
margin:10px 20px;
}

/* 让h3标题和下面的 confirm message 左对齐 */
.page-duhougan-confirm #confirm_message h3{
margin:30px 0px 20px 56px;
}
/* 让读后感的terms和作者信息左对齐 */
.node-type-readthink .meta {
float:left;
display:block;
clear:both;
}


/* 让读后感的副标题也左对齐，也就是所有duhougan fields左对齐 */
.node-type-readthink #content .field-items .field-item {
clear:both;
display:block;
text-indent:0;
}


/* whx starts from here */
/* readthink 及 dhgps 页单独让读后感正文字段缩进 */
.node-type-readthink #content .field-field-dhg-zhengwen .field-items .field-item,.page-dhgps #content .field-field-dhg-zhengwen .field-items .field-item {
text-indent:26px;
}
/* 修改发表读后感页面的标题位置 */
.page-node-add-readthink #page #page-inner #main #main-inner #content #content-inner #content-area form div .node-form .standard #edit-title-wrapper label  {
float:none;
font-weight:bold;
text-align:left;
}
/* 查看读后感页面控制标题的位置 */
.node-type-readthink #page #page-inner #main #main-inner #content #content-inner #content-header h1.title {
font-size: 1.8em;
text-align:left;
}
/* 评论书籍名称与评论正文的距离修改 */
.node-type-readthink  .field-field-dhg-pinglun-shuming{
padding:15px 0 0 0px;
}
/* 读后感推荐flag，点击前与点击后进行区分的CSS */
.flag-duhougan-tuijian .flag-action  {
color:#33A641;
font-size:1.2em;
}
.flag-duhougan-tuijian .unflag-action  {
color:#8B9191;
font-size:1em;
}
/* 提交第一篇读后感，加10分的提示位置布局 */
.page-duhougan-confirm #confirm_message h4 {
clear:both;
margin:30px 0 20px 56px;
}






/* 翻译node页整体布局 */
/* 外框 */
.node-type-fanyi-chapter #main #main-inner #content{
border:1px solid #D1D1D1;
border-top:0px;
padding:0 10px;
width:653px;
}
/* 标题 加背景、颜色、左侧padding*/
.node-type-fanyi-chapter #page #page-inner #main #main-inner #content #content-inner #content-header h1.title {
background-image:url("images/video_titleall.jpg");
border:medium none;
clear:both;
font-size:14px;
font-weight:700;
height:35px;
line-height:35px;
margin-left:-10px;
width:673px;
text-align:left;
}
.node-type-fanyi-chapter #page #page-inner #main #main-inner #content #content-inner #content-header h1.title span.title-content  {
padding-left:10px;
}

/* 章节与标题在同一行 */
.node-type-fanyi-chapter .field-field-fanyi-zhangjie {
float:left;
padding-left:550px;
margin-top:-25px;
font-size:1.1em;
font-weight:bold;
}

/* 翻译人横排 */
 .node-type-fanyi-chapter .field-field-fanyi-translators  {
float:left;
width:500px;
line-height:150%;
}
.node-type-fanyi-chapter .field-field-fanyi-translators .field-label {
float:left;
} 
.node-type-fanyi-chapter .field-field-fanyi-translators .field-items .field-item {
float:left;
}

.node-type-fanyi-chapter .field-field-fanyi-translators  a:link,.node-type-fanyi-chapter .field-field-fanyi-translators  a:visited{
color:#996600;
}
/* 翻译状态 */
.node-type-fanyi-chapter .field-field-fanyi-zhuangtai{
line-height:150%;
}
/* 上一章、下一章链接右对齐 */
.node-type-fanyi-chapter  #prev-next{
float:left;
padding-left:550px;
line-height:150%;
} 

/* 去掉章节表格的宽度2u4u中 ,并设置章节内容布局 */
.node-type-fanyi-chapter  .node-inner .content table.sticky-enabled {
background-color:#FFFFFF;
width:290px;
border:medium none;
margin:0 auto;
}
.node-type-fanyi-chapter   .node-inner .content table.sticky-enabled tr td{
background-color:#FFFFFF;
border-bottom:1px solid #E5EBE1;
height:28px;
padding:0 5px;
}
.node-type-fanyi-chapter  .node-inner .content table.sticky-enabled tr td.active{
background-color:#FFFFFF;
border-bottom:1px solid #E5EBE1;
height:28px;
padding:0 5px;
width:75px;
} 
/* 章节列表右对齐 */
.node-type-fanyi-chapter div#all-chapter-list {
float:right;
position:absolute;
top:40px;
left:680px;
width:290px;
}


/* 投票打分横排 */
.node-type-fanyi-chapter #nodevote-vote fieldset div,.node-type-fanyi-chapter #nodevote-vote fieldset label,.node-type-fanyi-chapter #nodevote-vote fieldset  select,.node-type-fanyi-chapter #nodevote-vote fieldset  input {
float:left;
margin:0 10px;
}

/* add翻译页面整体字体的设置 */
.section-node-add #content .content {
font-size:12px;
line-height:100%;
}
.section-node-add #content .node-type-fanyi-chapter  h2.title {
font-size:1.3em;
line-height:100%;
font-weight:bold;
padding:5px 10px 20px 0;
}
.section-node-add #content .node-type-fanyi-chapter h2.title a:link, .section-node-add #content .node-type-fanyi-chapter h2.title a:visited {
color:#996600;
}








