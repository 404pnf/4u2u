function import_video_tn($image,$video,$name){


		if(strpos($name,".flv"))
		     $filename =  substr($name,0,-4);
		else 
		     $filename = $name;
  
    if(file_exists($video.$filename.".flv")&&!file_exists($image.$filename.".jpg")){

			//	$cmdline = "/usr/bin/ffmpeg -y -i /var/www/html/drupal/sites/2u4u.com.cn/files/shipin/flv/\"".$filename."\".flv -ss 20 -vframes 1  /var/www/html/drupal/sites/2u4u.com.cn/files/shipin/tn/\"".$filename."\".jpg";           //截图shell命令
			$cmdline = "/usr/bin/ffmpeg -y -i ".$video."\"".$filename."\".flv -ss 20 -vframes 1 ".$image."\"".$filename."\".jpg";           //截图shell命令
                        echo $cmdline."<br>";
