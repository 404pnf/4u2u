@charset "utf-8"; /* CSS Document */
 
/* -----------------------------------电子图书馆 阅读 开始 -----------------------------*/
/* 新书快递 */
.view-whx-yuedu  .view-display-id-attachment_5 .views-field-field-yuedu-cover-fid{
float:left;
margin-right:18px;
height:106px;
}
/* .view-whx-yuedu  .view-display-id-attachment_5 .views-field-field-yuedu-summary-value{
clear:left;
} */
.view-whx-yuedu  .view-display-id-attachment_5 .views-row{
padding:5px 10px 8px 3px;
border-bottom:1px dashed #D1D1D1;
}
/* hover css */
/* + front page 首页*/
.view-whx-yuedu  .view-display-id-attachment_4 .item-list,
.view-whx-yuedu  .view-display-id-attachment_1 .item-list{
position:relative; 
width:100px;
float:left;
margin:0 8px 0 32px;
z-index:100;
}

.view-whx-yuedu  .view-display-id-attachment_4  .views-row,
.view-whx-yuedu  .view-display-id-attachment_1  .views-row{
position:absolute;
display:none;
list-style:none;
z-index:999;
}
/* 阴影 ie不支持*/
.shadow-right {
-moz-border-radius:3px 3px 3px 3px;
-moz-box-shadow:2px 2px 2px #999999;
}
/* 边框及颜色 */
.detail-tip {
background:none repeat scroll 0 0 #FFFFFF;
border:1px solid #DDDDDD;
padding:13px 13px 10px;
position:absolute;
width:300px;
top:0px;
left:110px;
z-index:9999; 
}
/* 小三角 */
.arrow-left {
background:url("images/arrow_gray.gif") no-repeat scroll 0 0 transparent;
height:9px;
left:0;
margin-left:-6px;
position:absolute;
top:30px;
width:6px;
z-index:9999; 
}
/* 阅读首页 hover end */

/* 阅读滚动 开始  */
/* prev, next, prevPage and nextPage buttons */
.anniu{
float:right;
width:110px;
display:inline;
}
a#prev1, a#next1 ,a#prev2, a#next2,a#prev3 ,a#next3,a#prev4, a#next4,a#prev5 ,a#next5,a#prev6, a#next6,a#prev7 ,a#next7{
	width:18px;
	height:18px;
	background:url(images/left.png) 0 -18px no-repeat;
	float:right;
	cursor:pointer;
	font-size:1px;
}
a#next1 ,a#next2,a#next3,a#next4,a#next5,a#next6,a#next7{
	background:url(images/right.png) 0 -18px no-repeat;
}

a#prev1.disabled, a#next1.disabled, a#prev2.disabled, a#next2.disabled, a#prev3.disabled, a#next3.disabled, a#prev4.disabled, a#next4.disabled, a#prev5.disabled, a#next5.disabled, a#prev6.disabled, a#next6.disabled, a#prev7.disabled, a#next7.disabled{
	background-position:0 0;		
}
/* position and dimensions of the navigator */
#navi1,#navi2 ,.navi{
	float:right;
	margin-top:2px;
}
/* items inside navigator */
#navi1 a ,#navi2 a ,.navi a {
	width:8px;
	height:8px;
	float:left;
	margin:3px;
	background:url(images/navigator.png) 0 0 no-repeat;
	font-size:1px;
}
/* mouseover state */
#navi1 a:hover,#navi2 a:hover ,.navi a:hover{
	background-position:0 -8px;      
}
/* active state (current page state) */
#navi1 a.active ,#navi2 a.active ,.navi a.active {
	background-position:0 -16px;     
} 	
/* this makes it possible to add next button beside view-content */
.view-whx-yuedu .view-display-id-attachment_4 ,.view-whx-yuedu .view-display-id-attachment_1{
	position:relative;
	overflow:hidden;
	width: 725px;
	height:180px;
	clear:both;
}
.view-whx-yuedu .view-display-id-attachment_4 .view-header,.view-whx-yuedu .view-display-id-attachment_1 .view-header{
height:25px;
}
.view-whx-yuedu .view-display-id-attachment_4 .view-header h2,.view-whx-yuedu .view-display-id-attachment_1 .view-header  h2{
display:inline;
float:left;
}
.view-whx-yuedu .view-display-id-attachment_4  .view-content ,
.view-whx-yuedu .view-display-id-attachment_1  .view-content {
position:absolute;
width:20000em;
_left:-30px; 
}
/* 阅读滚动 结束 end  */