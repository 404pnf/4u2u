function read_dir($dir){
	
	
	
$path = $dir;	

if (is_dir($path)) { 

	if ($dh = opendir($path)) { 
		while (($file = readdir($dh)) !== false) { 
		if ($file!="." && $file!="..") { 
		  if(strpos($file,".flv")){	
			$data .= urlencode(trim(substr($file,0,-4)));
			$data .= ";";
		  }
		}
	  }
	 
    }
  }	
	
	return $data;
}
